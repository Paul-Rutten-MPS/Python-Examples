{
    "components": [
        {
            "label": "Columns",
            "columns": [
                {
                    "components": [
                        {
                            "content": "<b>Original image</b>",
                            "className": "mb-0",
                            "refreshOnChange": false,
                            "key": "inputImage1",
                            "type": "htmlelement",
                            "input": false,
                            "tableView": false,
                            "label": "HTML"
                        },
                        {
                            "label": "hasImage",
                            "hidden": true,
                            "tableView": false,
                            "key": "hasImage",
                            "type": "checkbox",
                            "input": true,
                            "defaultValue": false
                        },
                        {
                            "label": "HTML",
                            "content": "None selected",
                            "refreshOnChange": false,
                            "key": "imageLabel",
                            "conditional": {
                                "show": true,
                                "when": "hasImage",
                                "eq": false
                            },
                            "type": "htmlelement",
                            "input": false,
                            "tableView": false
                        },
                        {
                            "label": "inputFile",
                            "hidden": true,
                            "hideLabel": true,
                            "tableView": false,
                            "storage": "base64",
                            "webcam": true,
                            "fileTypes": [
                                {
                                    "label": "",
                                    "value": ""
                                }
                            ],
                            "filePattern": "image/*",
                            "clearOnHide": false,
                            "validate": {
                                "required": true
                            },
                            "key": "inputFile",
                            "properties": {
                                "triggerHappy": "file_selection_change"
                            },
                            "type": "file",
                            "input": true
                        }
                    ],
                    "width": 6,
                    "offset": 0,
                    "push": 0,
                    "pull": 0,
                    "size": "md",
                    "currentWidth": 6
                },
                {
                    "components": [
                        {
                            "content": "<b>Resulting image</b>",
                            "className": "mb-0",
                            "refreshOnChange": false,
                            "key": "processedImage1",
                            "type": "htmlelement",
                            "input": false,
                            "tableView": false,
                            "label": "HTML"
                        },
                        {
                            "label": "hasResult",
                            "hidden": true,
                            "tableView": false,
                            "key": "hasResult",
                            "type": "checkbox",
                            "input": true,
                            "defaultValue": false
                        },
                        {
                            "label": "HTML",
                            "content": "Unprocessed",
                            "refreshOnChange": false,
                            "key": "labelNoResult",
                            "conditional": {
                                "show": true,
                                "when": "hasResult",
                                "eq": false
                            },
                            "type": "htmlelement",
                            "input": false,
                            "tableView": false
                        },
                        {
                            "label": "Image name",
                            "labelPosition": "left-left",
                            "applyMaskOn": "change",
                            "tableView": true,
                            "validate": {
                                "required": true
                            },
                            "key": "imageName",
                            "placeholder": "image_name.png",
                            "type": "textfield",
                            "input": true
                        },
                        {
                            "label": "resultFile",
                            "hidden": true,
                            "hideLabel": true,
                            "tableView": false,
                            "clearOnHide": false,
                            "key": "resultFile",
                            "customConditional": "show = (data.image_panel?.hasResult == true) && (data.image_panel?.resultFile != undefined)",
                            "type": "customresultfile",
                            "input": true
                        }
                    ],
                    "width": 6,
                    "offset": 0,
                    "push": 0,
                    "pull": 0,
                    "size": "md",
                    "currentWidth": 6
                }
            ],
            "key": "columns",
            "type": "columns",
            "input": false,
            "tableView": false
        },
        {
            "label": "figuresColumns",
            "columns": [
                {
                    "components": [
                        {
                            "label": "image",
                            "aspectRatio": 1.3333333333333333,
                            "hideLabel": true,
                            "tableView": false,
                            "key": "image",
                            "customConditional": "show = row.hasImage & !row.imageMode;",
                            "type": "customplotly",
                            "input": true
                        }
                    ],
                    "width": 6,
                    "offset": 0,
                    "push": 0,
                    "pull": 0,
                    "size": "md",
                    "currentWidth": 6
                },
                {
                    "components": [
                        {
                            "label": "resultFigure",
                            "aspectRatio": 1.3333333333333333,
                            "hideLabel": true,
                            "tableView": false,
                            "key": "resultFigure",
                            "customConditional": "show = row.hasResult & !row.imageMode;",
                            "type": "customplotly",
                            "input": true
                        }
                    ],
                    "width": 6,
                    "offset": 0,
                    "push": 0,
                    "pull": 0,
                    "size": "md",
                    "currentWidth": 6
                }
            ],
            "key": "figuresColumns",
            "type": "columns",
            "input": false,
            "tableView": false
        }
    ]
}